<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ucapan Selamat Datang -->
    <TextView
        android:id="@+id/ucapan_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Selamat datang"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nama Pengguna -->
    <TextView
        android:id="@+id/nama_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pengguna"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ucapan_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Streak Sekarang -->
    <TextView
        android:id="@+id/current_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streak Sekarang: 00m 00s"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/nama_pengguna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Streak Terlama -->
    <TextView
        android:id="@+id/longest_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streak Terlama: 00m 00s"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/current_streak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tombol Merokok -->
    <Button
        android:id="@+id/button_smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merokok"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/longest_streak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bantuan Chat"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/button_smoke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
